						span Lista Suspensa
						span.icon.is-small
							i.fas.fa-angle-down(aria-hidden='true')
				.dropdown-menu#dropdown-menu(role='menu')
					.dropdown-content
						a.dropdown-item(href='#').
							
							Opção Primeira
							
						a.dropdown-item.
							
							Opção Segunda
							
						a.dropdown-item.is-active(href='#').
							
							Opção Ativa
							
						a.dropdown-item(href='#').
							
							Mais Opções
							
						hr.dropdown-divider
						a.dropdown-item(href='#').
							
							Divisor de Águas
							

